<%# locals: (header:, image:, details: nil, tagline: nil) %>
<div class="row">
  <div class="col">
    <h1><%= header %></h1>
  </div>
</div>

<div class="row">
  <div class="col<%='-md-8' if details.any? %>">
    <% # This margin only appears below md size so there is a small gap if the cards are stacked vertically. %>
    <div class="card mb-3 mb-md-0">
      <%= image_tag(image.variant(slideshow_variant()), { class: 'card-img-top h-auto' }.merge(variant_width_and_height_html(slideshow_variant()))) %>
      
      <% if tagline.present? %>
        <div class="card-body">
          <p class="card-text"><%= tagline %></p>
        </div>
      <% end %>
    </div>
  </div>

  <% if details.any? %>
    <div class="col-md-4">
      <div class="card h-100">
        <div class="card-body">
          <% details.each do |detail| %>
            <h4><%= detail[:key] %></h4>
            <p><%= detail[:value] %></p>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<% # Margin here so it does not mess with the h-100 on the details card. %>
<div class="mb-3"></div>
