<%# locals: (card_title:, card_partial:, card_status: nil) %>

<div class="card">
  <% if card_status.present? %>
    <div class="card-status-start bg-<%= card_status %>"></div>
  <% end %>

  <div class="card-header">
    <span class="card-title"><%= card_title %></span>
    <div class="card-tools">
      <!-- Collapse Button -->
      <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
    </div>
    <!-- /.card-tools -->
  </div>
  <!-- /.card-header -->
  <div class="card-body">
    <%= render card_partial %>
  </div>
  <!-- /.card-body -->
</div>
<!-- /.card -->