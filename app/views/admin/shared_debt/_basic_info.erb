<% extra_fields = {} if extra_fields.nil? %>
<% fields = { 
  user: user_link(debt.user, false),
  due_by: debt.due_by,
  show: get_link(debt.show, :show),
  status: debt.formatted_status
} %>

<% fields = fields.merge(extra_fields) %>

<%= render('shared/pages/show', object: debt, fields: fields, show_actions_args: show_actions_args) %>
