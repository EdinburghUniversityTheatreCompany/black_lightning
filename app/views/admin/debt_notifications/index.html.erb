<% search_fields = { user_full_name_cont: { slug: 'defaults.name' } } %>

<% headers = [:user, :sent_on, :notification_type] %>

<% field_sets = @debt_notifications.map { |debt_notification| {
  fields: [
    debt_notification,
    user_link(debt_notification.user, false),
    debt_notification.sent_on,
    debt_notification.notification_type
  ] } } %>

<% quick_actions = [] %>
<% if can?(:debt_overview, Event) %>
  <% quick_actions << link_to('Show Debt Overview', debt_overview_admin_events_path, class: 'btn btn-primary') %>
<% end %>

<%= render 'shared/pages/index', resource_class: Admin::DebtNotification, resources: @debt_notifications, headers: headers, field_sets: field_sets, search_fields: search_fields,
  show_new_button: false, include_edit_button: false, include_link_to_item: false, quick_actions: quick_actions %>
