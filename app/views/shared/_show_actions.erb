
<% destroy_link_params = {} if destroy_link_params.nil? %>
<% index_link_params = {} if index_link_params.nil? %>

<div class="mb-3">
  <%= get_link object, :edit, html_class: 'btn btn-primary' %>

  <%= get_link object, :destroy, **destroy_link_params %>

  <%= get_link object.class, :index, **index_link_params %>

  <%= yield %>
</div>
