<%# locals: (f:, dynamic: nil) %>

<%= render layout: '/shared/form/fields_for_template', locals: { 
        f: f,
        div_class_additions: 'video_link',
        attributes: [:name, :link, :order, :access_level]
    } do %>
    <%= f.input :name, placeholder: 'Video Link Title' %>
    
    <br>
    <%= f.input :link, placeholder: 'The link to the video',
        hint: 'Paste in the youtu.be/<code> link or youtube.com/watch?v=<code> link' 
    %>
    <br>
    <%= f.input :order, hint: 'Lower numbers are prioritised.' %>

    <%= link_to_remove f %>

    <br>

    <%= f.input :access_level, collection: VideoLink::ACCESS_LEVELS, hint: 'Note that the user also needs to have access to the object the item is attached to.', include_blank: false %>
<% end %>
