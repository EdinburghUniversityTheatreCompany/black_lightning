<%# locals: () %>

<% current_news = News.accessible_by(current_ability).order('publish_date DESC').current.first(4) %>

<% current_news.each do |news| %>
  <p><%= link_to news.title, admin_news_path(news) %> <%= "<span class='badge bg-important'>Members</span>".html_safe if !news.show_public %></p>
  <p><%= truncate_markdown(news.body, 140) %></p>
  <hr />
<% end %>

<% if current_news.empty? then %>
  <p>There is no news.</p>
<% end %>
