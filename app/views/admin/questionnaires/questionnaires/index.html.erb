<% quick_actions = [get_link(Admin::Questionnaires::QuestionnaireTemplate, :index)] %>

<% content = render('admin/questionnaires/questionnaires/index_content') %>

<% search_fields = {
    name_cont:        { slug: 'defaults.name' },
    event_name_cont:  { slug: 'defaults.event_name'},
    date_range:       { type: :date_range, options: { start_year: 2012, start_date_attribute: 'event_start_date', end_date_attribute: 'event_end_date'} }
} %>

<%= render 'shared/pages/index', resource_class: Admin::Questionnaires::Questionnaire, resources: @questionnaires, content: content, search_fields: search_fields,
  quick_actions: quick_actions, include_pagination: false %>
